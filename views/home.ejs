<% include partials/header %>
<div id="headlines-slide" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#headlines-slide" data-slide-to="0" class="active"></li>
        <li data-target="#headlines-slide" data-slide-to="1"></li>
        <li data-target="#headlines-slide" data-slide-to="2"></li>
        <li data-target="#headlines-slide" data-slide-to="3"></li>
        <li data-target="#headlines-slide" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="slide-overlay"></div>
            <img class="d-block w-100" src="<%=data.articles[0].urlToImage%>" alt="First slide">
            <div class="carousel-caption">
                <h1 class="">
                    <%= data.articles[0]["title"] %>
                </h1>
            </div>
        </div>
        <div class="carousel-item">
            <div class="slide-overlay"></div>
            <img class="d-block w-100" src="<%=data.articles[1].urlToImage%>" alt="Second slide">
            <div class="carousel-caption">
                <h1 class="">
                    <%=data.articles[1]["title"] %>
                </h1>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="<%=data.articles[2].urlToImage%>" alt="Third slide">
            <div class="slide-overlay"></div>
            <div class="carousel-caption">
                <h1 class="">
                    <%=data.articles[2]["title"] %>
                </h1>
            </div>
        </div>
        <div class="carousel-item ">
            <img class="d-block w-100" src="<%=data.articles[3].urlToImage%>" alt="Fourth slide">
            <div class="slide-overlay"></div>
            <div class="carousel-caption">
                <h1 class="">
                    <%=data.articles[3]["title"] %>
                </h1>
            </div>
        </div>
        <div class="carousel-item ">
            <img class="d-block w-100" src="<%=data.articles[4].urlToImage%>" alt="Fifth slide">
            <div class="slide-overlay"></div>
            <div class="carousel-caption">
                <h1 class="">
                    <%=data.articles[4]["title"] %>
                </h1>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#headlines-slide" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#headlines-slide" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container pb-3">
    <div class="row">
    <% data["articles"].forEach(function(news) { %>
        
        <div class="col-md-4 col-sm-6">
            <div class="card">
                <img class="card-img-top" src='<%=news["urlToImage"] %>'>
                <div class="card-body">
                    <h5 class="card-title">
                        <%= news["title"] %>
                    </h5>
                    <p class="card-subtitle">
                        <span>Source<%= news["source"]["name"] %> </span> <br />
                        <%let date = news.publishedAt.substring(0, 10);%>
                        <span> Date:<%= date %></span>
                    </p>
                           
                    <p class=" card-text description"><%=news.description%></p>
                    
                    <p><a class="link" href="/news/<%=news.title%>" target="blank"> Read More..</a></p>
                    
                </div>

            </div>
        </div>

    <% }); %>
    </div>
</div>




<%include partials/footer%>